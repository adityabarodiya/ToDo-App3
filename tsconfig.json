{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  